<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.countryinfo.CountryInfoActivity">

    <include layout="@layout/reuse_toolbar"/>

    <ImageView
        android:id="@+id/ci_iv"
        android:layout_width="@dimen/bigSquareImageHeight"
        android:layout_height="@dimen/bigSquareImageHeight"
        android:src="@drawable/ic_place_holder"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/bigMargin"/>
    <TextView
        android:id="@+id/ci_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ci_iv"
        android:textSize="@dimen/textSuperBig"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_margin="@dimen/bigMargin"/>
    <TextView
        android:id="@+id/ci_time_des_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ci_time_des"
        app:layout_constraintTop_toBottomOf="@+id/ci_name_tv"
        android:textSize="@dimen/textSmall"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="@dimen/maxBigMargin"
        android:layout_marginStart="@dimen/bigMargin"
        android:layout_marginEnd="@dimen/bigMargin"
        android:layout_marginBottom="@dimen/bigMargin"/>
    <TextView
        android:id="@+id/ci_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ci_time_des_tv"
        android:textSize="@dimen/textSmall"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginStart="@dimen/bigMargin"
        android:layout_marginEnd="@dimen/bigMargin"/>

</androidx.constraintlayout.widget.ConstraintLayout>