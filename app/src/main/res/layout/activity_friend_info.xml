<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.friendinfo.FriendInfoActivity">

    <include layout="@layout/reuse_toolbar"/>

    <ImageView
        android:id="@+id/fi_avatar_iv"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:src="@drawable/ic_place_holder"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/fi_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textCenter"
        android:layout_below="@+id/fi_avatar_iv"
        android:gravity="center"/>
    
    <RelativeLayout
        android:id="@+id/fi_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fi_name_tv">
        <TextView
            android:id="@+id/fi_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="@dimen/textSmall"
            android:layout_toStartOf="@+id/fi_phone_iv"
            tools:ignore="RtlCompat" />
        <ImageView
            android:id="@+id/fi_phone_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_phone"
            android:layout_alignParentEnd="true"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fi_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fi_phone_layout">
        <TextView
            android:id="@+id/fi_email_tv"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="@dimen/textSmall"
            android:layout_toStartOf="@+id/fi_email_iv"
            tools:ignore="RtlCompat"/>
        <ImageView
            android:id="@+id/fi_email_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_email"
            android:layout_alignParentEnd="true"
            tools:ignore="RtlCompat"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fi_country_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fi_email_layout">
        <TextView
            android:id="@+id/fi_country_tv"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/country"
            android:layout_alignParentStart="true"
            tools:ignore="RtlCompat" />
        <ImageView
            android:id="@+id/fi_country_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_flag"
            android:layout_toEndOf="@+id/fi_country_tv"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fi_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fi_country_layout">
        <TextView
            android:id="@+id/fi_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag"
            android:layout_alignParentStart="true"
            tools:ignore="RtlCompat"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/fi_tag_cg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fi_tag_tv"
            tools:ignore="RtlCompat" />
    </RelativeLayout>


</RelativeLayout>