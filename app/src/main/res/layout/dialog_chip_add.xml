<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/bigMargin">

    <EditText
        android:id="@+id/chip_add_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bigMargin"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/chip_add_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textSize="@dimen/textSmall"
        android:padding="@dimen/smallPadding"
        android:layout_margin="@dimen/smallMargin"
        app:layout_constraintTop_toBottomOf="@+id/chip_add_et"
        app:layout_constraintEnd_toStartOf="@+id/chip_add_confirm_btn"
        android:background="@color/colorTrans"
        android:textColor="@color/colorError"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/chip_add_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="@dimen/textSmall"
        android:padding="@dimen/smallPadding"
        android:layout_margin="@dimen/smallMargin"
        app:layout_constraintTop_toBottomOf="@+id/chip_add_et"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorTrans"
        android:textColor="@color/colorPrimary"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>